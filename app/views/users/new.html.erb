<h2>User Registration</h2>

<center>
  <%= form_for @user do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :street_address %>
  <%= f.text_field :street_address %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :state %>
  <%= f.text_field :state %>

  <%= f.label :zip %>
  <%= f.text_field :zip %>

  <%= f.label :email %>
  <%= f.text_field :email, value: nil %>

  <%= f.label :password %>
  <%= f.password_field :password, value: nil %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, value: nil %>

  <%= f.hidden_field :nickname, value: "Home" %>

  <%= f.submit %>
  <% end %>
</center>
